<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
  >
    <View
      android:id="@+id/center"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
    />
    <EditText
      android:id="@+id/editLogin"
      android:layout_width="500dip"
      android:layout_height="wrap_content"
      android:layout_alignRight="@id/center"
      android:layout_centerVertical="true"
      android:hint="@string/Login_login_hint"
      android:inputType="text"
      android:singleLine="true"
    />
    <EditText 
      android:id="@+id/editIpAddress"
      android:layout_height="wrap_content"
      android:layout_width="500dip"
      android:layout_alignRight="@id/center"
      android:layout_above="@id/editLogin"
      android:singleLine="true"
      android:inputType="textUri"
      android:hint="@string/Login_server_address_hint" 
    />
    <EditText
      android:id="@+id/editPassword"
      android:layout_width="500dip"
      android:layout_height="wrap_content"
      android:layout_below="@id/editLogin"
      android:layout_alignRight="@id/center"
      android:hint="@string/Login_password_hint"
      android:inputType="textPassword"
      android:singleLine="true"
    />
    <Button
      android:id="@+id/buttonLogin"
      android:layout_height="135dip"
      android:layout_width="250dip"
      android:layout_alignLeft="@id/center"
      android:layout_centerVertical="true"
      android:text="@string/Login_button_connection"
    />
  </RelativeLayout>
</RelativeLayout>